{
    "name": "Jumpstart cmake/docmake",
    "dockerComposeFile": "../../docker-compose.yml",
    "service": "docmake",
    "runServices": [],
    "workspaceFolder": "/workspace",
    "updateRemoteUserUID": true,
    "customizations": {
        "vscode": {
            "extensions": [
                "anwar.papyrus-pdf",
                "lvm-vs-code-extensions.vscode-clangd",
                "ms-vscode.cmake-tools",
                "twxs.cmake"
            ]
        }
    },
    "remoteEnv": {
        "DISPLAY": ":99"
    },
    "postStartCommand": "Xvfb :99 &"
}
